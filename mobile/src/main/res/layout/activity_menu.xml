<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <Button
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:id="@+id/pastChasesButton"
            android:layout_gravity="center"
            android:background="@drawable/prev_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Chases"
            android:id="@+id/pastChasesText"
            android:layout_gravity="center"
            android:textColor="#ff040404"
            android:textSize="30dp"
            android:layout_marginLeft="5dp"
            android:typeface="monospace"
            android:layout_marginTop="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chase Now"
            android:id="@+id/randomChasesText"
            android:textSize="30dp"
            android:layout_marginLeft="25dp"
            android:textColor="#ff000000"
            android:typeface="monospace"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:id="@+id/randomChasesButton"
            android:layout_gravity="center"
            android:background="@drawable/random_icon"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/searchGamesButton"
            android:background="@drawable/search_icon"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Games"
            android:id="@+id/searchGamesText"
            android:textSize="30dp"
            android:typeface="monospace"
            android:layout_marginLeft="5dp"
            android:textColor="#ff000000"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>